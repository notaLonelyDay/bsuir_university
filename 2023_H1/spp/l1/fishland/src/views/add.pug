html
    head
        title= "Create post"

        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')


    body
        include navbar

        form(method="POST", action="/add" class="pt-5" enctype="multipart/form-data")
            div(class="mb-3 container")
                label(for="title" class="form-label")
                    | Название
                input(type='text', class="form-control col-auto"
                    name='title' id="title" placeholder="название поста")

            div(class="mb-3 container")
                label(class="form-label" for='name')
                    | Имя
                input(type='text' class="form-control"
                    name='name' id='name' placeholder="не обязательно")

            div(class="mb-3 container")
                label(class="form-label" for="text")
                    | Text
                textarea(name="text" id="text" rows=9
                    class="form-control col-auto")

            div(class="mb-3 container")
                label(class="form-label" for="file")
                    | Фото
                input(type='file', id="file" class="form-control col-auto"
                    name='file' multiple)

            div(class="mb-3 container pt-3")
                input(type='submit' class="btn btn-success" value="Создать")